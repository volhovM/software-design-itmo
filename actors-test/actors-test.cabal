-- Initial yesod-serv.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                actors-test
version:             0.1.0.0
synopsis:            Actors testing app
license:             GPL-3
license-file:        LICENSE
author:              Mikhail Volkhov
maintainer:          volhovm.cs@gmail.com
category:            Web
build-type:          Simple
cabal-version:       >=1.10

executable actors-run
  main-is:             Main.hs
  other-modules:       Actors
                     , SearchEngineStub
                     , Internal
  -- other-extensions:
  build-depends:       aeson >= 1.0.2.1
                     , base >=4.9 && <4.10
                     , containers >= 0.5.7.1
                     , data-default
                     , http-types
                     , lens >= 4.14
                     , mtl >= 2.2.1
                     , random >= 1.1
                     , scotty
                     , text >= 1.2.2.1
                     , universum
                     , wai
                     , warp
                     , wreq
                     , yesod
                     , yesod-form >= 1.4.8
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -threaded
  default-extensions:  DeriveGeneric
                       GeneralizedNewtypeDeriving
                       FlexibleContexts
                       StandaloneDeriving
                       NoImplicitPrelude
                       OverloadedStrings
                       RecordWildCards
                       TypeApplications
                       TupleSections
                       ViewPatterns
                       LambdaCase
                       MultiWayIf
